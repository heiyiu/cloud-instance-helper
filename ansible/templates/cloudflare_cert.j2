apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ "wildcard-" + ( domain | replace(".", "-")) }}
  namespace: kube-system
spec:
  secretName: {{ "wildcard-" + ( domain | replace(".", "-" ))  + "-tls" }}
  dnsNames:
    - {{ domain }}
    - {{ "*." + domain }}
  issuerRef:
    name: cloudflare-issuer
    kind: Issuer