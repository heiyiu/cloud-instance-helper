apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: kube-system
spec:
  valuesContent: |-
    tlsStore:
      default:
        defaultCertificate:
          secretName: {{ "wildcard-" +  (domain | replace(".", "-")) + "-tls" }}
    providers:
      kubernetesCRD:
        allowCrossNamespace: true